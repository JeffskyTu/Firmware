	mavlink start -d /dev/ttyS2 -b 921600 -m onboard -r 80000
	mavlink stream -d /dev/ttyS2 -s VISION_POSITION_ESTIMATE -r 100
	mavlink stream -d /dev/ttyS2 -s EXTERNAL_WRENCH_ESTIMATE -r 50
