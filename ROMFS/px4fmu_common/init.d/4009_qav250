	param set MC_ROLL_P 6.6
	param set MC_ROLLRATE_P 70
	param set MC_ROLLRATE_I 90
	param set MC_RR_INT_LIM 145
	param set MC_ROLLRATE_D 5.0
	param set MC_PITCH_P 7.0
	param set MC_PITCHRATE_P 80
	param set MC_PITCHRATE_I 60
	param set MC_PR_INT_LIM 100
	param set MC_PITCHRATE_D 5.9
	param set MC_YAW_P 4
	param set MC_YAWRATE_P 10
	param set MC_YAWRATE_I 5
	param set MC_YR_INT_LIM 10
	
